# Environment Configuration Template
# Copy this to .env.dev, .env.staging, .env.prod
# NEVER commit the actual .env files!

# App Configuration
APP_NAME=Prism
ENVIRONMENT=development

# Firebase Configuration (Get from Firebase Console)
FIREBASE_API_KEY=your_api_key_here
FIREBASE_APP_ID=your_app_id_here
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_STORAGE_BUCKET=your_bucket_here

# iOS Specific (if applicable)
IOS_BUNDLE_ID=com.yourcompany.prism

# Android Specific
ANDROID_PACKAGE_NAME=com.yourcompany.prism

# API Endpoints (if you have a backend)
API_BASE_URL=https://api.yourapp.com
API_TIMEOUT=30000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_CHAT=false
ENABLE_VIDEO_CALLS=false

# Third-party Services
GOOGLE_MAPS_API_KEY=your_maps_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_key_here

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=dqmna3s8l
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_UPLOAD_PRESET=prism_profile

# Debug Settings
DEBUG_MODE=true
SHOW_DEBUG_BANNER=true
